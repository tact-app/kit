#!/usr/bin/env bash
# shellcheck source=../../utils/os.bash     # @arch @os
# shellcheck source=../../utils/print.bash  # @fatal

@install-action-validator() {
  local force=false version=0.5.3

  local arg skip=false
  for arg in "${@}"; do
    if $skip; then
      skip=false
      continue
    fi
    case "${arg}" in
    -f | --force)
      force=true
      shift
      ;;
    --version)
      version="${2}"
      shift 2
      skip=true
      ;;
    esac
  done

  if command -v action-validator >/dev/null && ! $force; then
    [[ $(action-validator --version | awk '{print $2}') == "${version}" ]] && return
  fi

  local file
  case $(@os) in
  darwin) file="action-validator_$(@os)_$(@arch)" ;;
  linux) file="action-validator_$(@os)_$(@arch)" ;;
  *) @fatal there is no supported binary ;;
  esac

  local path=${1} src=https://github.com/mpalmer/action-validator
  curl -sSfL "${src}/releases/download/v${version}/${file}" -o "${path}/action-validator"
  chmod +x "${path}/action-validator"
}
