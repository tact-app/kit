#!/usr/bin/env bash
# shellcheck source=../../utils/env.bash    # @arch @os
# shellcheck source=../../utils/print.bash  # @fatal

@install-okteto() {
  local force=false version=2.18.0

  local arg skip=false
  for arg in "${@}"; do
    if $skip; then
      skip=false
      continue
    fi
    case "${arg}" in
    -f | --force)
      force=true
      shift
      ;;
    --version)
      version="${2}"
      shift 2
      skip=true
      ;;
    esac
  done

  if command -v okteto >/dev/null && ! $force; then
    [[ $(okteto version | awk '{print $3}') == "${version}" ]] && return
  fi

  local file
  case $(@os) in
  darwin) file=okteto-Darwin-arm64 ;;
  linux) file=okteto-Linux-arm64 ;;
  *) @fatal there is no supported binary ;;
  esac

  local path=${1} src=https://github.com/okteto/okteto/releases/download
  curl -sSfL "${src}/${version}/${file}" -o "${path}/okteto"
  chmod +x "${path}/okteto"
}
